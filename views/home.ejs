<!DOCTYPE html>
<html lang="em">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, intial-scale=1.0">
    <title>URL SHORTNER</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>URL SHORTNER</h1>
            </div>
        </div>
        <form action="/create" method="post">

            <div class="row">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="longurl" placeholder="Enter Long URL"
                        aria-label="long url" aria-describedby="long url" />
                    <input type="submit" class="btn btn-outline-secondary" value="submit" />
                </div>

            </div>
        </form>

        <div class="row">
            <% for( let i=0; i<urlresult.length;i++){%>
                <div class="col-lg-3">
                    <div class="card border-dark mb-3" style="max-width: 18rem;">
                        <div class="card-header">Total click:<%=urlresult[i].clickcount%>
                        </div>
                        <div class="card-body text-dark">
                            <h5 class="card-title">
                                <a href="http://localhost:9000/<%=urlresult[i].shorturl%>"
                                    target="_blank">http://localhost:9000/<%=urlresult[i].shorturl%></a>
                            </h5>
                            <p class="card-text">
                                <%= urlresult[i].longurl%>
                            </p>
                            <a href="/delete/<%=urlresult[i].id%>" class="btn btn-sm btn-danger">Remove</a>
                        </div>
                    </div>
                </div>
                <%}%>
        </div>

</body>

</html>